{
  "name": "groq-language-server",
  "version": "0.1.0",
  "description": "Language Server Protocol implementation for the GROQ query language",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "bin": {
    "groq-language-server": "./bin/groq-language-server.cjs"
  },
  "scripts": {
    "build": "tsup",
    "build:nvim": "npm run build",
    "build:vscode": "cd editors/vscode && npm run build",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src"
  },
  "keywords": [
    "groq",
    "sanity",
    "language-server",
    "lsp"
  ],
  "author": "Kurt Steigleder",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "bin",
    "editors/nvim"
  ],
  "dependencies": {
    "tree-sitter": "^0.25.0",
    "tree-sitter-groq": "git+https://github.com/greymour/tree-sitter-groq.git",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@babel/parser": "^7.24.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.0",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^1.2.0"
  }
}
